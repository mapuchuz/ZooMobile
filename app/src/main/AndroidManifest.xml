<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.gerdevstudio.zoomobile">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- allow us to get infos from web (and our zoo web-service -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- name of application calls custom application class, with stetho support -->
    <application
        android:name=".ZooApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />

        <provider
            android:name=".datalayer.AnimalProvider"
            android:authorities="fr.gerdevstudio.zoomobile"
            android:exported="false" />

        <service
            android:name=".GetAllAnimalsService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>